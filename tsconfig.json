{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "types": [
            "node",
            "@playwright/test"
        ]
    },
    "include": [
        "tests/**/*.ts",
        "helpers/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
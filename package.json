{
    "name": "buc-automation",
    "version": "1.0.0",
    "description": "Automatización de validación de anonimización BUC (TEST vs PROD)",
    "main": "index.js",
    "scripts": {
        "test": "playwright test",
        "test:ui": "playwright test --ui",
        "test:headed": "playwright test --headed",
        "test:debug": "playwright test --debug",
        "test:sheets": "playwright test tests/validar-por-especificacion.spec.ts",
        "dashboard:sync:sheets": "powershell -Command \"if (Test-Path evidencias/REPORTE_POR_ESPECIFICACION.json) { Copy-Item -Path evidencias/REPORTE_POR_ESPECIFICACION.json -Destination dashboard/public/data.json -Force }\"",
        "dashboard:sheets": "npm run test:sheets && npm run dashboard:sync:sheets && cd dashboard && npm run dev",
        "report": "playwright show-report",
        "dashboard:sync": "powershell -Command \"if (Test-Path evidencias/REPORTE_ANONIMIZACION.json) { Copy-Item -Path evidencias/REPORTE_ANONIMIZACION.json -Destination dashboard/public/data.json -Force }\"",
        "dashboard": "npm run dashboard:sync && cd dashboard && npm run dev"
    },
    "keywords": [
        "playwright",
        "automation",
        "buc",
        "testing"
    ],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@playwright/test": "^1.40.0",
        "@types/node": "^20.10.0",
        "typescript": "^5.3.3"
    },
    "dependencies": {
        "exceljs": "^4.4.0"
    }
}